---
import Meta from '@/components/head/Meta.astro'
import Footer from '@/sections/Footer.astro'
import Header from '@/sections/Header.astro'
import type { Preload } from '@/types/index'

interface Props {
  title: string
  description: string
  preload?: Array<Preload>
  canonical?: string
  image?: string
}

const { title, description, image, canonical, preload } = Astro.props
---

<!doctype html>
<html lang='es' class='antialiased scroll-smooth'>
  <head>
    <Meta
      title={title}
      description={description}
      preload={preload}
      canonical={canonical}
      image={image}
    />
  </head>
  <body
    class='max-w-screen w-full h-full bg-[#ccc] text-[#111] dark:text-[#ccc] dark:bg-[#111]'
  >
		<div class='max-w-[105rem] mx-auto' id='App'>
			<Header />
    	<slot />
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	html::-webkit-scrollbar {
		width: 0.25rem;
		height: 0.25rem;
		display: inline-block;
	}

	html::-webkit-scrollbar-thumb {
		border-radius: 7px;
		background-color: #0081d7;
	}

	html::-webkit-scrollbar-thumb:hover {
		background-color: #0099ff;
	}
</style>
